{
  "name": "Demo Level - Multi-Tier Instancing Showcase",
  "version": "2.0",
  "description": "Demonstrates all 4 instancing tiers: Static, Semi-Static, Dynamic, Procedural",
  "tierInfo": {
    "_description": "Instance tiers control GPU buffer management and update frequency",
    "tiers": {
      "static": {
        "description": "Never moves after level load. GPU-resident forever, uploaded once.",
        "examples": "Terrain, buildings, rocks, props, flora"
      },
      "semi-static": {
        "description": "Moves infrequently (dirty flag pattern). Updated only when changed.",
        "examples": "Doors, switches, levers, chests, destructibles"
      },
      "dynamic": {
        "description": "Moves every frame. Ring-buffered, CPU uploads per-frame.",
        "examples": "Player, NPCs, physics objects, projectiles"
      },
      "procedural": {
        "description": "GPU-generated via compute shaders. No CPU involvement.",
        "examples": "Particles, grass blades, debris, foliage animation"
      }
    }
  },
